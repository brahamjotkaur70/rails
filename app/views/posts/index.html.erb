<h1>Posts Index Page</h1>

<div class='row'>
  <div class='col-2'>
  </div>

  <div class='col-10'>
    <% @posts.each do |post| %>
         <%= link_to(post) do %>
        <li class='list-group-item'>
          <p><%= post.id %> <%= post.author %></p>
        </li>
      <% end %>
    <% end %>
  </div>
</div>