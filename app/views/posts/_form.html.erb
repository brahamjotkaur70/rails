<%= form_with model: @post, local:true do |f| %>
  <div class='form-group'>
    <%= f.label :author %>
    <%= f.text_field(:author, class: 'form-control')%>
  </div>
  <div class='form-group'>
    <%= f.label :body %>
    <%= f.text_area(:body, class: 'form-control', cols: 50, rows: 5)%>
  </div>
  <%= f.submit "Create", class: 'btn btn-primary' %>
<% end %>